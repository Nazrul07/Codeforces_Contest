#include<bits/stdc++.h>
#include<cmath>
using namespace std;
int main()
{
    int t,i,a,b,c;
    cin>>t;
    for(i=1 ; i<=t ; i++)
    {
        cin>>a>>b>>c;
        if(a==1)
            cout<<"1"<<endl;
        else
        {
            a=a-1;
            b=abs(c-b)+(c-1);
            if(a==b)
                cout<<"3"<<endl;
            else if(a>b)
                cout<<"2"<<endl;
            else
                cout<<"1"<<endl;
        }
    }
    return 0;
}
